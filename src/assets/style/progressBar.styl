@import './base'

.p-bar
  padding: 5rpx 20rpx 30rpx
  background-color: #ffffff
  display: flex
  justify-content: space-between
  font-size: 20rpx
  color: #999999
  .p-bardot
    position: relative
    width: 20%
    text-align: center
    &::after
      content: ''
      position: absolute
      width: 22rpx
      height: 22rpx
      left: 50%
      top: 50%
      margin-top: -11rpx
      margin-left: -11rpx
      display: block
      background-color: #eeeeee
      border-radius: 50%
    &::before
      content: ''
      position: absolute
      width: 100%
      height: 2rpx
      left: -50%
      top: 50%
      margin-left: 11rpx
      background-color:#eeeeee
    &:first-child:before
      display: none
    &.active
      color: $theme-color
      &::after
        width: 30rpx
        height: 30rpx
        margin-top: -15rpx
        margin-left: -15rpx
        background-color: $theme-color
      &::before
        background-color: $theme-color
    &.on
      &::after
        background-color: #999999
      &::before
        background-color: $theme-color
    text
      padding-top: 70rpx
      display: block

  

