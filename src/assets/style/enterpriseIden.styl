@import './base'
page
  background: #eee
.container
  padding: 90rpx 0 20rpx
.iden-header
  position: fixed
  left: 0
  right: 0
  top: 85rpx
  background: #fff
  display: flex
  justify-content: space-between
  align-items: center
  padding: 0 15rpx
  font-size: 24rpx
  color: #999
  line-height: 80rpx
  >view
    display: flex
    align-items: center
    line-height: 30rpx
  .num
    width: 30rpx
    height: 30rpx
    text-align: center
    flex: 0 0 30rpx
    border-radius: 100%
    margin-right: 6rpx
  .active
    color: #d7092d
    .num
      background: #d7092d
      color: #fff
.iden-form
  font-size: 24rpx
  color: #666
  .f-line
    padding: 15rpx 30rpx
    background: #fff
    display: flex
    justify-content: space-between
    align-items: center
    margin-bottom: 2rpx
    &:nth-child(3n)
      margin-bottom: 10rpx
  .f-text
    width: 440rpx
    flex: 0 0 440rpx
    height: 60rpx
    text-align: right
    &.full
      line-height: 60rpx
  .f-btn
    width: 685rpx
    height: 80rpx
    line-height: 80rpx
    background: #d7092d
    color: #fff
    margin-top: 20rpx
    font-size: 30rpx
  .f-picker
    display: flex
    align-items: center
    >text
      position: relative
      height: 60rpx
      box-sizing: border-box
      line-height: 58rpx
      margin-left: 10rpx
      border-radius: 10rpx
      padding: 0 40rpx 0 20rpx
      border: 2rpx solid #c8c8c8
      :after
        content: ''
        display: block
        width: 0
        height: 0
        border: 10rpx solid transparent
        border-top-color: #999
        position: absolute
        right: 10rpx
        top: 25rpx
.iden-title
  padding: 10rpx 30rpx 20rpx
  >image
    width: 31rpx
    height: 37rpx
    vertical-align: middle
    margin-right: 6rpx
  >text
    color: #666
    font-size: 24rpx
.picIden-item
  margin: 0 30rpx 20rpx
  background: #fff
  border-radius: 20rpx
  display: flex
  justify-content: space-around
  height: 250rpx
  padding: 30rpx 0
  box-sizing: border-box
  >view
    display: flex
    flex-flow: column
    justify-content: space-between
    align-items: center
    flex: 0 0 216rpx
    text-align: center
    font-size: 24rpx
    color: #999
    >image
      width: 185rpx
      height: 130rpx
.chooseIdenType
  display: flex
  justify-content: space-between
  align-items: center
  padding: 10rpx 30rpx
  background: #fff
  margin-bottom: 20rpx
  font-size: 24rpx
  color: #666
  >view
    display: flex
    flex-flow: column
  .type-curr
    padding-right: 25rpx
    background: url($picPath+'icon/page-more.png') right center no-repeat
    background-size: 13rpx 24rpx
.gt-tips
  font-size: 18rpx
  color: #d7092d
  padding-left: 25rpx
  line-height: 25rpx
  background: url("data:image/png;base64,") left center no-repeat
  background-size: 21rpx
.iden-info
  display: flex
  justify-content: space-between
  align-items: center
  padding: 0 30rpx
  background: #fff
  color: #666
  font-size: 24rpx
  border-bottom: 1px solid #e6e6e6
  height: 90rpx
  input
    text-align: right
  &:last-child
    border: 0
  .red-point
      hasPoint()
.iden-cw
  .ic-item
    display: flex
    justify-content: space-between
    padding: 0 30rpx
    color: #666
    font-size: 24rpx
    align-items: center
    background: #fff
    height: 90rpx
    >input
      text-align: right
    &+.ic-item
      border-top: 1px solid #e6e6e6
  .gt-tips
    margin-left: 30rpx
    line-height: 50rpx
.iden-headtips
  line-height: 90rpx
  margin-bottom: 10rpx
  background: #fff
  text-align: center
  color: $theme-color
  font-size: 24rpx
  margin-top: -90rpx
.iden-verify
  display: flex
  justify-content: space-between
  padding: 0 30rpx
  color: #666
  font-size: 24rpx
  align-items: center
  background: #fff
  height: 90rpx
  .v-input
    flex: 0 0 177rpx
    height: 60rpx
    border: 2rpx solid #e6e6e6
    border-radius: 5rpx
    text-align: center
  >image,button
    flex: 0 0 177rpx
    height: 60rpx
    line-height: 60rpx
    margin: 0
    font-size: 24rpx
    color: #666
.iden-rule-head
  margin-top: 20rpx
  font-size: 24rpx
  color: #666
  text-align: center
.iden-rule
  font-size: 18rpx
  text-align: center
  display: flex
  justify-content: center
  align-items: baseline
  color: #666
  line-height: 30rpx
  .r-checkbox
    transform: scale(0.6,0.6);
    vertical-align: middle
  .r-link
    color: $theme-color