@import './base'
page
  background: #eee
.container
  background: #eee
.fpsh
  margin: 30rpx 15rpx 0
  .fpshli
    color: #999999
    font-size: 24rpx
    margin-bottom: 30rpx
    .fpshlibx
      background-color: #ffffff
      padding: 20rpx
      border-radius: 10rpx
      .fpshlibxl
        width 50%
      .fpshbtna
        font-size: 20rpx
        color: #ffffff
        padding: 6rpx 16rpx
        border: 2rpx solid $theme-color
        background-color: $theme-color
        border-radius: 8rpx
        display: inline-block
        margin-left: 20rpx
      .fpshbtnb
        color: $theme-color
        background-color: #ffffff
.kptk
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-color: rgba(0,0,0,0.5)
  display: flex
  justify-content: center
  align-items: center
  z-index 99
  .kptkbx
    width 60%
    padding: 30rpx
    background-color: #ffffff
    border-radius: 10rpx
    color: #666666
    font-size: 24rpx
    .tkbtnbx
      display: flex
      justify-content: space-between
      .tkbtna
        font-size: 24rpx
        color: #ffffff
        width 180rpx
        height 60rpx
        line-height: 60rpx
        background-color: #999999
        border-radius: 8rpx
        text-align: center
        display: inline-block
      .tkbtnb
        background-color: $theme-color
    .kptktxt
      width 80%
      height 120rpx
      border: 2rpx solid #999999
      background-color: #eeeeee
      padding: 3%
    .xgxxinp
      width: 253rpx
      height: 52rpx
      line-height: 52rpx
      background-color: #eeeeee
      border-radius: 26rpx
      padding-left: 20rpx
.n-nodata
  margin-top: 20rpx
  text-align: center
  font-size: 24rpx
  color:#888
.d-screen
  position: fixed
  width: 100%
  height: 100%
  top: 0
  left: 0
  right: 0
  bottom: 0
  z-index 3
  .d-bg
    position: absolute
    left 0
    top: 0
    background-color: rgba(0,0,0,0.5)
    z-index:99
    width 100%
    height 100%
  .d-cont
    position: absolute
    width: 70%
    height: 100%
    top:0
    right: -70%
    z-index:100
    background-color: #ffffff
    animation: rightTipsOne 0.5s
    &.show
      animation: rightTips 0.5s
      right: 0%
    .d-contbx
      padding: 40rpx 0 80rpx 30rpx
      color: #666666
      font-size: 24rpx
      .ssa
        padding-bottom: 20rpx
        .kptkinp
          width: 450rpx
          height: 60rpx
          line-height: 60rpx
          background-color: #eeeeee
          border-radius: 30rpx
          padding-left: 20rpx
        .fpkdbtna
          width: 111rpx
          height: 46rpx
          line-height: 46rpx
          color: $theme-color
          text-align: center
          font-size: 20rpx
          display: inline-block
          border: 2rpx solid $theme-color
          border-radius: 8rpx
          margin-right: 20rpx
          &.cur
            background-color: $theme-color
            color: #ffffff
  .d-btnbx
    position: absolute
    bottom: 0
    left:0
    right: 0
    .d-btnaa
      width: 50%
      height: 75rpx
      line-height: 75rpx
      color: #ffffff
      background-color: #666666
      text-align: center
      font-size: 30rpx
      display: inline-block
    .d-btnab
      background-color: $theme-color
@css{
  @keyframes rightTips{
    0%{  
      right: -70%;
    }
    100%{
      right: 0%;
    }
  }
  @keyframes rightTipsOne{
    0%{
      right: 0%;
    }
    100%{
      right: -70%;
    }
  }  
}
