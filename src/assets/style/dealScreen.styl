@import './base'
page
  padding-top: 85rpx
  box-sizing: border-box
.d-screen
  position: fixed
  width: 100%
  height: 100%
  top: 0
  left: 0
  right: 0
  bottom: 0
  z-index 3
  .d-bg
    position: absolute
    left 0
    top: 0
    background-color: rgba(0,0,0,0.5)
    z-index:99
    width 100%
    height 100%
  .d-cont
    position: absolute
    width: 70%
    height: 100%
    top:0
    right: -70%
    z-index:100
    background-color: #ffffff
    animation: rightTipsOne 0.5s
    &.show
      animation: rightTips 0.5s
      right: 0%
    .d-contbx
      padding: 40rpx 0 80rpx 30rpx
      color: #666666
      font-size: 28rpx
      .d-conttit
        font-size: 30rpx
        margin-bottom: 20rpx
      .d-contbtn
        min-width: 138rpx
        height: 48rpx
        line-height: 48rpx
        border: 2rpx solid #999999
        color: #666666
        background-color: #ffffff
        font-size: 24rpx
        border-radius: 6rpx
        float: left
        margin-right: 20rpx
        margin-bottom: 20rpx
        text-align: center
      .d-btnsel
        border: 2rpx solid $theme-color
        color: #ffffff
        background-color: $theme-color
  .d-btnbx
    position: absolute
    bottom: 0
    left:0
    right: 0
    .d-btnaa
      width: 50%
      height: 75rpx
      line-height: 75rpx
      color: #ffffff
      background-color: #666666
      text-align: center
      font-size: 30rpx
      display: inline-block
    .d-btnab
      background-color: $theme-color
@css{
  @keyframes rightTips{
    0%{  
      right: -70%;
    }
    100%{
      right: 0%;
    }
  }
  @keyframes rightTipsOne{
    0%{
      right: 0%;
    }
    100%{
      right: -70%;
    }
  }  
}
