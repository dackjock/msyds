@import './base'

.account-header
  position: fixed
  top: 0
  left: 0
  right: 0
  display: flex
  align-items: center
  background: $theme-color
  color: #fff
  padding: 40rpx 65rpx
  .acc-logo
    width: 100rpx
    flex: 0 0 100rpx
    height: 100rpx
    border-radius: 100%
    border: 4rpx solid #e24d67
    margin-right: 20rpx
  .ci-top
    display: flex
    font-size: 24rpx
    align-items: center
    >image
      flex: 0 0 23rpx
      width: 23rpx
      height: 17rpx
      margin-right: 10rpx
  .ci-comp
    font-size: 18rpx
    margin-top: 10rpx
  .ac-icon
    position: absolute
    top: 20rpx
    right: 100rpx
    &.msg
      right: 30rpx
    >image
      width: 45rpx
      height: 45rpx
    >text
      position: absolute
      right: -10rpx
      top: -10rpx
      width: 30rpx
      line-height: 30rpx
      text-align: center
      border-radius: 100%
      font-size: 16rpx
      background: #fff
      color: $theme-color
