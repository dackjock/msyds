@import './base'

page
  background: #eee

.container
  padding-top: 420rpx

.account-header
  position: fixed
  top: 0
  left: 0
  right: 0
  z-index: 2
  display: flex
  align-items: center
  background: $theme-color
  color: #fff
  padding: 40rpx 65rpx
  height: 188rpx
  box-sizing: border-box
  .acc-logo
    width: 100rpx
    flex: 0 0 100rpx
    height: 100rpx
    border-radius: 100%
    border: 4rpx solid #e24d67
    margin-right: 20rpx
  .ci-top
    display: flex
    font-size: 24rpx
    align-items: center
    >image
      flex: 0 0 23rpx
      width: 23rpx
      height: 17rpx
      margin-right: 10rpx
  .ci-comp
    font-size: 18rpx
    margin-top: 10rpx
  .ac-icon
    position: absolute
    top: 20rpx
    right: 100rpx
    &.msg
      right: 30rpx
    >image
      width: 45rpx
      height: 45rpx
    >text
      position: absolute
      right: -10rpx
      top: -10rpx
      width: 30rpx
      line-height: 30rpx
      text-align: center
      border-radius: 100%
      font-size: 16rpx
      background: #fff
      color: $theme-color
.acc-order
  position: fixed
  top: 188rpx
  left: 0
  right: 0
  z-index: 2
  padding: 30rpx
  background: #fff
  border-top: 10rpx solid #eee
  border-bottom: 10rpx solid #eee
  .ao-title
    padding-left: 20rpx
    border-left: 4rpx solid $theme-color
    line-height: 24rpx
  .ao-items
    display: flex
    justify-content: space-around
    padding-top: 30rpx
    >view
      display: flex
      flex-flow: column
      align-items: center
      color: #999
      font-size: 20rpx
      >text:first-child
        font-size: 60rpx
        color: #333
.menu-list
  margin-top: 10rpx
  .m-item
    position: relative
    display: flex
    justify-content: space-between
    line-height: 24rpx
    padding: 30rpx 60rpx 30rpx 30rpx
    background: #fff
    border-bottom: 2rpx solid #eee
    moreIcon()
    .m-title
      padding-left: 20rpx
      border-left: 4rpx solid $theme-color