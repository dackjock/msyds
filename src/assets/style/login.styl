@import './base'
.container
  background: #eee
.sign-wrap
  height: 100%
  display: flex
  flex-flow: column
  align-items: center
  .s-logo
    margin: 67rpx 0 36rpx
    width: 403rpx
    height: 445rpx
    flex: 0 0 445rpx
  .s-form
    width: 100%
  .f-line
    position: relative
    padding: 0 20rpx
    background: #fff
    margin-bottom: 2rpx
    .f-text
      width: 100%
      height: 80rpx
      font-size: 30rpx
      padding-left: 60rpx
      box-sizing: border-box
      &.tel
        background: url($picPath + 'telIcon.png') no-repeat
        background-size: 23rpx auto
        background-position: 15rpx center
      &.pwd
        background: url($picPath + 'suoIcon.png') no-repeat
        background-size: 34rpx auto
        background-position: 8rpx center
    .f-forget
      position: absolute
      z-index: 2
      top: 0
      right:40rpx
      line-height: 80rpx
      color: #d7092d
  .f-btn
    width: 685rpx
    height: 80rpx
    line-height: 80rpx
    background: #d7092d
    color: #fff
    margin-top: 20rpx
    font-size: 30rpx
  .f-sign
    text-align: center
    color: #d7092d
    font-size: 30rpx
    margin-top: 30rpx