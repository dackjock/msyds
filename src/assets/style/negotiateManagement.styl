@import './base'
page
  background: #eee
.container
  background: #eee
.yjtop
  height 80rpx
  padding: 0 30rpx
  background-color: #ffffff
  z-index 99
  line-height: 80rpx
  border-bottom: 2rpx solid #eeeeee
  .sw
    zoom:.5
.yjul
  margin: 10rpx
  .yjli
    padding: 20rpx
    margin-bottom: 10rpx
    background-color: #ffffff
    border-radius: 10rpx
    .yjlip
      display: flex
      justify-content: space-between
      align-items: center
      .yjlipl
        width 50%
    .yjbtna
      width 116rpx
      height 46rpx
      line-height: 46rpx
      text-align: center
      font-size: 20rpx
      color: #ffffff
      background-color: $theme-color
      display: inline-block
      margin-left: 20rpx
      border-radius: 10rpx
.kptk
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  background-color: rgba(0,0,0,0.5)
  display: flex
  justify-content: center
  align-items: center
  z-index 99
  .kptkbx
    width 60%
    padding: 30rpx
    background-color: #ffffff
    border-radius: 10rpx
    color: #666666
    font-size: 24rpx
    .tkbtnbx
      display: flex
      justify-content: space-between
      .tkbtna
        font-size: 24rpx
        color: #ffffff
        width 180rpx
        height 60rpx
        line-height: 60rpx
        background-color: #999999
        border-radius: 8rpx
        text-align: center
        display: inline-block
      .tkbtnb
        background-color: $theme-color
.n-nodata
  margin-top: 20rpx
  text-align: center
  font-size: 24rpx
  color:#888
.tr
  text-align: right 
.tc
  text-align: center
