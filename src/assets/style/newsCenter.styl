@import './base'
page 
  background: #eeeeee
.container
  background: #eee
.n-ctt
  position: fixed
  left: 0
  right 0
  top: 85rpx
  z-index 9
  .n-ctta
    background-color: #ffffff
    border-bottom: 2rpx solid #eeeeee
    display: flex
    justify-content: space-around
    align-items: center
    .n-cttabx
      width: 33.3%
      font-size: 30rpx
      color: #666666
      position relative
      text-align: center
      padding-top: 15rpx
      padding-bottom: 24rpx
      &.cur
        color: $theme-color
        border-bottom: 4rpx solid $theme-color
        padding-bottom: 20rpx
      .n-cttabxsa
        position: absolute
        top: -2rpx
        right 25rpx
        color: $theme-color
        .quan
          width 28rpx
          height: 28rpx
          line-height: 28rpx
          background-color: $theme-color
          color: #ffffff
          text-align: center
          border-radius: 14rpx
          font-size: 18rpx
          display: inline-block
  .n-scroll
    background-color: #ffffff
    width 100%
    overflow hidden
    white-space: nowrap
    .n-cttbx
      padding: 15rpx 20rpx 19rpx
      color: #666666
      font-size: 24rpx
      display: inline-block
      &.cur
        color: $theme-color
        border-bottom: 4rpx solid $theme-color
        padding-bottom: 15rpx
.n-ctlibx
  margin-top: 170rpx
  .n-ctlist
    margin-bottom: 30rpx
    position relative
    .n-ctlistd
      color: #999999
      font-size: 24rpx
      text-align: center
      margin-bottom: 10rpx
    .n-ctlistbx
      width 75%
      padding: 15rpx 15rpx 0
      background-color: #ffffff
      margin: 0 auto
      border-radius: 8rpx
      font-size: 24rpx
      color: #999999
      .n-cttit
        color: #666666
        margin-bottom: 10rpx
      .n-ctcont
        max-height 90rpx
        line-height: 30rpx
        overflow hidden
        display: block
      .n-ctbt
        height 50rpx
        display: flex
        justify-content: space-between
        align-items: center
        font-size: 20rpx
        border-top: 2rpx solid #eeeeee
        margin-top: 20rpx
        .n-arrri
          width: 13rpx
          height: 24rpx
          background: url($picPath + 'icon/page-more.png') no-repeat
          background-position: center
          background-size:cover
    .n-ctlibg
      background-color: rgba(0,0,0,.6)
      width 100%
      height 100%
      position: absolute
      left 0
      top: 0
      right: 0
      display: flex
      align-items: center
      justify-content: center
      .n-ctlibgi
        width 60rpx
        height 43rpx
        vertical-align: middle
        display: inline-block
.n-delbx
  position: fixed
  left 0
  bottom: 0
  right 0
  z-index 19
  background-color: #ffffff
  display: flex
  font-size: 30rpx
  color: #666666
  .n-delbxl
    width 75%
    height 100rpx
    line-height: 100rpx
    background-color: $theme-color
    text-align: center
    color: #ffffff
  .n-delbxr
    flex: 1
    justify-content: center
    display: flex
    align-items: center
    checkbox
      margin-left: 5rpx
      transform:scale(0.6)