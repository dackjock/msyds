.goods
    margin: 10rpx;
    background: #fff;
    font-size: 24rpx;
    border-radius: 10rpx;
    .g_item
        display: flex;
        justify-content: space-between;
        padding: 0 15rpx;
        line-height: 45rpx;
        border-bottom: 1px solid #eee;
        .label
