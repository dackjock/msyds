.flex_box
    height: 80rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding:0 25rpx;
    background-color: #fff;
    border-top: 1px solid #eee;
    box-sizing: border-box;
    .phone_btn
        display: inline-block;
        vertical-align: middle;
        padding:5rpx 10rpx;
        background: #d7092d;
        color:#fff;
        font-size: 24rpx;
        border-radius: 10rpx;
    .label
        color: #999;
        font-size: 26rpx;
    .span
        color: #666;
        font-size: 28rpx;

.show_tab
    display: flex;
    align-items: center;
    .tab_main
        width:170rpx;
        text-align: center;
        height: 36rpx;
        line-height: 36rpx;
        border-top: 1px solid #eee;
        border-bottom: 1px solid #eee;
        font-size: 24rpx;
        &.red
            color: #d7092d;
        &.lv
            color: #80c269;
    .btn
        height:45rpx;
        line-height: 40rpx;
        width: 45rpx;
        text-align: center;
        font-size: 24rpx;
        box-sizing: border-box;
        border:1px solid #eee;
        &.add
            color: #d7092d;
        &.del
            color: #80c269;
