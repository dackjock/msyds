.select_panel
    &.show .layer_gary
        display: block;
     &.show .layer_main
        transform: translateX(0);
    .layer_gary
        position: fixed;
        top: 0;
        right 0;
        left 0;
        bottom: 0;
        background-color: rgba(0,0,0,0.5);
        z-index :99;
        display: none;
    .layer_main
        position: fixed;
        color: #333;
        width:70%;
        top:0;
        bottom: 0;
