@import './base'

.pickup-item
  display: flex
  justify-content: space-between
  align-items: center
  padding: 0 30rpx
  height: 90rpx
  border-bottom: 2rpx solid #eee
  font-size: 22rpx
  picker
    position: relative
    padding-right: 30rpx
    moreIcon(0)
  input
    text-align: right
.pi-tips
  background: #feecbf
  color: $theme-color
  font-size: 20rpx
  text-align: center
  padding: 10rpx 0
.entrust-title,.entrust-info
  display: flex
  justify-content: space-between
  align-items: center
  height: 80rpx
  padding: 0 30rpx
  font-size: 24rpx
  border-bottom: 2rpx solid #eee
.bord-top
  border-top: 10rpx solid #eee
.entrust-title
  .et-name
    line-height: 30rpx
    padding-left: 10rpx
    font-size: 28rpx
    border-left: 4rpx solid $theme-color
  >view
    display: flex
  button
    width: 180rpx
    background: $theme-color
    color: #fff
    border: 0
    line-height: 50rpx
    font-size: 20rpx
    margin-left: 20rpx
.entrust-info
  .has-tips
    display: flex
    flex-flow: column
    .tips
      color: $theme-color
      font-size: 20rpx
  .red
    color: $theme-color
.choose-dialog
  position: fixed
  left: 0
  top: 0
  right: 0
  bottom: 0
  z-index: 3
  background: rgba(0,0,0,.5)
  display: flex
  justify-content: center
  align-items: center
  .cd-model
    flex: 0 0 650rpx
    display: flex
    flex-flow: column
    align-items: center
    background: #fff
    border-radius: 10rpx
  .cd-tit
    line-height: 80rpx
    color: $theme-color
    font-size: 28rpx
  .cd-btn
    display: flex
    justify-content: space-around
    width: 100%
    padding: 20rpx 0
    .cb-cf,.cb-cc
      width: 180rpx
      line-height: 60rpx
      font-size: 24rpx
      color: #fff
      border: 0
    .cb-cf
      background: $theme-color
    .cb-cc
      background: #989898
  .cd-body
    width: 100%
    height: 600rpx
    overflow: auto
    display: flex
    flex-flow: row wrap
    justify-content: flex-start
    align-items: flex-start
    >text
      flex: 0 0 190rpx
      text-align: center
      line-height: 60rpx
      border-radius: 10rpx
      border: 2rpx solid #eee
      margin: 0 0 20rpx 20rpx
      font-size: 24rpx
      box-sizing: border-box
      transition: .5s
      transition-property: background
      &.active
        background: $theme-color
        color: #fff
.entrust-card
  display: flex
  padding: 30rpx 0
  .ec-item
    flex: 0 0 50%
    display: flex
    flex-flow: column
    align-items: center
    font-size: 24rpx
    >image
      width: 200rpx
      height: 120rpx
      margin-top: 10rpx
.entrust-btn
  position: fixed
  bottom: 0
  left: 0
  right: 0
  background: #fff
  z-index: 2
  display: flex
  justify-content: space-around
  align-items: center
  padding: 10rpx 0
  height: 80rpx
  .e-reset,.e-confirm
    line-height: 70rpx
    width: 250rpx
    border: 0
    color: #fff
    border-radius: 10rpx
    font-size: 24rpx
  .e-reset
    background: #8f8f8f
  .e-confirm
    background: $theme-color
.check-rule
  display: flex
  align-items: center
  justify-content: center
  font-size: 20rpx
  line-height: 60rpx
  checkbox
    transform: scale(.5)
.container.cost-pad
  padding-bottom: 330rpx
.cost-foot
  position: fixed
  left: 0
  bottom: 0
  right: 0
  background: #fff
  z-index: 2
  padding: 20rpx
  box-shadow: 0 -3rpx 5rpx rgba(0,0,0,.1)
  .cf-top
    display: flex
    justify-content: space-between
    border-bottom: 2rpx solid #eee
    padding-bottom: 20rpx
  .cf-bot
    text-align: center
    line-height: 100rpx
    font-size: 40rpx
    color: #666
  .red
    color: $theme-color
  .cf-diff
    position: absolute
    right: 20rpx
    bottom: 120rpx
    line-height: 100rpx
    font-size: 20rpx
    color: $theme-color
.diff-dialog
  position: fixed
  z-index: 9
  top: 0
  right: 0
  bottom: 0
  left: 0
  background: rgba(0,0,0,.5)
  .dd-wrap
    display: flex
    flex-flow: column
    align-items: center
    position: absolute
    width: 650rpx
    box-sizing: border-box
    left: 50rpx
    top: 200rpx
    border-radius: 10rpx
    background: #fff
    padding: 20rpx
    .w-head
      padding-bottom: 20rpx
      display: block
      width: 100%
      text-align: center
    .w-area
      background: #eee
      border: 2rpx solid #ccc
      border-radius: 10rpx
      padding: 20rpx
      height: 200rpx
      box-sizing: border-box
    .w-tips
      font-size: 20rpx
      display: block
      width: 100%
      text-align: center
      color: $theme-color
      line-height: 60rpx
    .w-btn
      display: flex
      justify-content: space-around
      padding-top: 20rpx
      .confirm,.cancel
        width: 200rpx
        line-height: 70rpx
        color: #fff
        font-size: 24rpx
      .confirm
        background: $theme-color
      .cancel
        background: #8f8f8f
.cost-payWay
  position: fixed
  bottom: 0
  left: 0
  right: 0
  box-sizing: border-box
  padding: 20rpx
  background: #fff
  z-index: 9
  display: flex
  flex-flow: column
  align-items: center
  justify-content: space-around
  height: 330rpx
  .pay-way
    display: flex
    width: 100%
    justify-content: space-around
    .pay-item
      display: flex
      justify-content: space-around
      flex-flow: column
      align-items: center
      flex: 0 0 200rpx
      font-size: 24rpx
      padding: 30rpx 0
      >text
        margin-top: 30rpx